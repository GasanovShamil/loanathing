{% extends 'front/base.html.twig' %}

{% block content %}
    <h1>Announce edit</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('announce_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $( document ).ready(function() {
            $('select').material_select();
            $('.form-date-picker').pickadate({
                selectMonths: true,
                selectYears: 15,
                today: 'Aujourd\'hui',
                clear: 'Effacer',
                close: 'Valider',
                closeOnSelect: true,
            });
        });
    </script>
{% endblock %}
