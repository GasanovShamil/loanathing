{% extends 'front/base.html.twig' %}

{% block content %}
    <h1>Announce</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ announce.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ announce.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ announce.description }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{% if announce.startDate %}{{ announce.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{% if announce.endDate %}{{ announce.endDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('announce_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('announce_edit', { 'id': announce.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
